{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "defaultPalette": false,
            "defaultGradients": false,
            "defaultDuotone": false,
            "palette": [
                { "slug": "ac-primary",            "color": "#18181B", "name": "Primary" },
                { "slug": "ac-primary-light",      "color": "#27272A", "name": "Primary Light" },
                { "slug": "ac-primary-dark",       "color": "#09090B", "name": "Primary Dark" },
                { "slug": "ac-accent",             "color": "#64748B", "name": "Accent" },
                { "slug": "ac-accent-light",       "color": "#7C8DA0", "name": "Accent Light" },
                { "slug": "ac-accent-dark",        "color": "#475569", "name": "Accent Dark" },
                { "slug": "ac-surface",            "color": "#FAFAFA", "name": "Surface" },
                { "slug": "ac-surface-alt",        "color": "#F4F4F5", "name": "Surface Alt" },
                { "slug": "ac-border",             "color": "#E4E4E7", "name": "Border" },
                { "slug": "ac-border-subtle",      "color": "#F0F0F2", "name": "Border Subtle" },
                { "slug": "ac-text",               "color": "#18181B", "name": "Text" },
                { "slug": "ac-text-muted",         "color": "#71717A", "name": "Text Muted" },
                { "slug": "ac-text-faint",         "color": "#A1A1AA", "name": "Text Faint" },
                { "slug": "ac-text-on-dark",       "color": "#FAFAFA", "name": "Text On Dark" },
                { "slug": "ac-text-on-dark-muted", "color": "#A1A1AA", "name": "Text On Dark Muted" },
                { "slug": "ac-success",            "color": "#16A34A", "name": "Success" },
                { "slug": "ac-error",              "color": "#DC2626", "name": "Error" }
            ]
        },
        "typography": {
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "slug": "ac-display",
                    "fontFamily": "'DM Sans', 'Inter', system-ui, sans-serif",
                    "name": "Display",
                    "fontFace": [
                        {
                            "fontFamily": "DM Sans",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/dm-sans-400.woff2" ]
                        },
                        {
                            "fontFamily": "DM Sans",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/dm-sans-500.woff2" ]
                        },
                        {
                            "fontFamily": "DM Sans",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/dm-sans-600.woff2" ]
                        }
                    ]
                },
                {
                    "slug": "ac-body",
                    "fontFamily": "'Inter', system-ui, -apple-system, sans-serif",
                    "name": "Body",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/inter-400.woff2" ]
                        },
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/inter-500.woff2" ]
                        }
                    ]
                },
                {
                    "slug": "ac-mono",
                    "fontFamily": "'JetBrains Mono', 'SF Mono', 'Fira Code', monospace",
                    "name": "Mono",
                    "fontFace": [
                        {
                            "fontFamily": "JetBrains Mono",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontDisplay": "swap",
                            "src": [ "file:./assets/fonts/jetbrains-mono-400.woff2" ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                { "slug": "ac-xs",      "size": "clamp(0.6875rem, 0.66rem + 0.1vw, 0.75rem)",    "name": "Extra Small" },
                { "slug": "ac-sm",      "size": "clamp(0.75rem, 0.72rem + 0.15vw, 0.8125rem)",   "name": "Small" },
                { "slug": "ac-base",    "size": "clamp(1rem, 0.95rem + 0.25vw, 1.125rem)",        "name": "Base" },
                { "slug": "ac-lg",      "size": "clamp(1.125rem, 1.05rem + 0.4vw, 1.3125rem)",   "name": "Large" },
                { "slug": "ac-xl",      "size": "clamp(1.25rem, 1.1rem + 0.5vw, 1.5rem)",        "name": "Extra Large" },
                { "slug": "ac-2xl",     "size": "clamp(1.5rem, 1.2rem + 0.9vw, 2rem)",           "name": "2XL" },
                { "slug": "ac-3xl",     "size": "clamp(1.875rem, 1.4rem + 1.6vw, 2.75rem)",      "name": "3XL" },
                { "slug": "ac-4xl",     "size": "clamp(2.25rem, 1.6rem + 2.2vw, 3.5rem)",        "name": "4XL" },
                { "slug": "ac-5xl",     "size": "clamp(2.75rem, 1.8rem + 3.5vw, 5rem)",          "name": "5XL" },
                { "slug": "ac-counter", "size": "clamp(3.5rem, 2rem + 5vw, 7rem)",               "name": "Counter" }
            ]
        },
        "spacing": {
            "units": [ "px", "rem", "em", "vw", "vh", "%" ],
            "spacingSizes": [
                { "slug": "ac-xs",      "size": "0.25rem",                         "name": "XS" },
                { "slug": "ac-sm",      "size": "0.5rem",                          "name": "SM" },
                { "slug": "ac-md",      "size": "1rem",                            "name": "MD" },
                { "slug": "ac-lg",      "size": "1.5rem",                          "name": "LG" },
                { "slug": "ac-xl",      "size": "2rem",                            "name": "XL" },
                { "slug": "ac-2xl",     "size": "3rem",                            "name": "2XL" },
                { "slug": "ac-3xl",     "size": "4.5rem",                          "name": "3XL" },
                { "slug": "ac-4xl",     "size": "6rem",                            "name": "4XL" },
                { "slug": "ac-5xl",     "size": "9rem",                            "name": "5XL" },
                { "slug": "ac-section", "size": "clamp(6rem, 4rem + 6vw, 11rem)", "name": "Section" }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "border": {
            "color": true,
            "radius": false,
            "style": true,
            "width": true
        },
        "shadow": {
            "defaultPresets": false,
            "presets": [
                { "slug": "ac-sm", "name": "Small",  "shadow": "0 1px 2px rgba(0, 0, 0, 0.04)" },
                { "slug": "ac-md", "name": "Medium", "shadow": "0 2px 8px rgba(0, 0, 0, 0.06)" },
                { "slug": "ac-lg", "name": "Large",  "shadow": "0 4px 16px rgba(0, 0, 0, 0.08)" }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--ac-surface)",
            "text": "var(--wp--preset--color--ac-text)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--ac-body)",
            "fontSize": "var(--wp--preset--font-size--ac-base)",
            "fontWeight": "400",
            "lineHeight": "1.65"
        },
        "spacing": {
            "blockGap": "0"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-display)",
                    "fontWeight": "500",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.02em"
                },
                "color": {
                    "text": "var(--wp--preset--color--ac-text)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-4xl)",
                    "lineHeight": "1.15"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-3xl)",
                    "lineHeight": "1.15"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-2xl)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-xl)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-lg)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-base)",
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--ac-accent)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--ac-accent-light)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--ac-accent-dark)"
                    }
                }
            },
            "button": {
                "border": {
                    "radius": "0",
                    "width": "1px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--ac-primary)"
                },
                "color": {
                    "background": "var(--wp--preset--color--ac-primary)",
                    "text": "var(--wp--preset--color--ac-surface)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem",
                        "right": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--ac-primary-light)"
                    }
                }
            }
        },
        "blocks": {
            "core/separator": {
                "border": {
                    "color": "var(--wp--preset--color--ac-border)",
                    "width": "1px",
                    "style": "solid"
                },
                "css": "border-radius: 0;"
            },
            "core/quote": {
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--ac-accent)",
                        "width": "2px",
                        "style": "solid"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-display)",
                    "fontSize": "var(--wp--preset--font-size--ac-xl)",
                    "fontWeight": "500",
                    "lineHeight": "1.4"
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--ac-xl)"
                    }
                }
            },
            "core/code": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-sm)"
                },
                "color": {
                    "background": "var(--wp--preset--color--ac-surface-alt)",
                    "text": "var(--wp--preset--color--ac-text)"
                },
                "border": {
                    "color": "var(--wp--preset--color--ac-border)",
                    "width": "1px",
                    "style": "solid"
                },
                "css": "border-radius: 0;"
            },
            "core/post-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-display)",
                    "fontSize": "var(--wp--preset--font-size--ac-4xl)",
                    "fontWeight": "500",
                    "lineHeight": "1.15",
                    "letterSpacing": "-0.02em"
                }
            },
            "core/post-date": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                },
                "color": {
                    "text": "var(--wp--preset--color--ac-text-muted)"
                }
            },
            "core/post-terms": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                },
                "color": {
                    "text": "var(--wp--preset--color--ac-text-muted)"
                }
            },
            "core/post-excerpt": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--ac-base)"
                },
                "color": {
                    "text": "var(--wp--preset--color--ac-text-muted)"
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                },
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--ac-lg)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--ac-text)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--ac-accent)"
                            }
                        }
                    }
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-sm)",
                    "fontWeight": "400",
                    "letterSpacing": "0.12em",
                    "textTransform": "uppercase"
                },
                "color": {
                    "text": "var(--wp--preset--color--ac-text)"
                }
            },
            "core/query-pagination": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                }
            },
            "core/post-content": {
                "spacing": {
                    "blockGap": "var(--wp--preset--spacing--ac-lg)"
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "0"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--ac-xl)"
                    }
                },
                "css": "& li { margin-bottom: var(--wp--preset--spacing--ac-sm); }"
            },
            "core/image": {
                "css": "border-radius: 0; & img { border-radius: 0; }"
            },
            "core/search": {
                "css": "border-radius: 0; & .wp-block-search__input { border-radius: 0; } & .wp-block-search__button { border-radius: 0; }",
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-body)",
                    "fontSize": "var(--wp--preset--font-size--ac-base)"
                }
            },
            "core/button": {
                "css": "border-radius: 0; & .wp-block-button__link { border-radius: 0; }"
            },
            "core/post-navigation-link": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ac-mono)",
                    "fontSize": "var(--wp--preset--font-size--ac-xs)",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase"
                }
            }
        }
    },
    "templateParts": [
        { "name": "header", "title": "Header", "area": "header" },
        { "name": "header-transparent", "title": "Header (Transparent)", "area": "header" },
        { "name": "footer", "title": "Footer", "area": "footer" },
        { "name": "footer-minimal", "title": "Footer (Minimal)", "area": "footer" },
        { "name": "footer-columns", "title": "Footer (Columns)", "area": "footer" }
    ],
    "customTemplates": [
        { "name": "page-no-title", "title": "Page (No Title)", "postTypes": [ "page" ] },
        { "name": "page-full-width", "title": "Page (Full Width)", "postTypes": [ "page" ] }
    ]
}
