{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "alpacode/page-header",
    "version": "1.0.0",
    "title": "Page Header",
    "category": "alpacode",
    "icon": "welcome-widgets-menus",
    "description": "Top-of-page header with eyebrow, title, and optional description. Dark background.",
    "keywords": ["page", "header", "title", "hero"],
    "textdomain": "alpacode",
    "attributes": {
        "eyebrow": {
            "type": "string",
            "default": ""
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "description": {
            "type": "string",
            "default": ""
        }
    },
    "supports": {
        "align": ["full"],
        "html": false,
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "padding": true,
            "margin": false
        }
    },
    "editorScript": "file:./editor.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css",
    "render": "file:./render.php",
    "example": {
        "attributes": {
            "eyebrow": "About",
            "title": "Our Story",
            "description": "Founded on the principle that great design is invisible â€” you feel it, not see it."
        }
    }
}
